
mixin headerColorBlock(title,imgName)
    -var bg_css = 'background-image:url("images/'+imgName+'");'
    section#section-header.ftco-cover.ftco-slant.ftco-slant-white(style=bg_css)
            .container
                .row.align-items-center.justify-content-center.text-center.ftco-vh-60
                    .col-md-10
                        h1.ftco-heading.ftco-animate= title
    

mixin categoryListCSS(isCustomStyle)
    //- boostrap-category-list
    link(rel='stylesheet', href='css/boostrap-category-list.css')

    if isCustomStyle
        style.
            .list-unstyled>li{
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            .list-unstyled .pull-right{
                border-bottom:none;
                text-decoration: none;
            }

